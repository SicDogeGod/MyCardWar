using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using System;
using System.IO;
public class playerdata : MonoBehaviour {

	// Use this for initialization
	void Start () {

        Invoke("SendJsonTo", 0.5f);
        Invoke("ReadJson",3f);
	}
	
	// Update is called once per frame
	void Update () {
		
	}

    void SendJsonTo() {
        Player player01 = new Player();
        player01.playUid = 001;
        player01.playerName = "ssss";
        player01.playerSpeed = 3.2f;
        player01.playerMoney = 1000;

        Players playersdata = new Players();
        playersdata.players = new List<Player>();
        playersdata.players.Add(player01);

        string playerjson = JsonUtility.ToJson(playersdata);

        Debug.Log(playerjson);

        File.WriteAllText(Application.dataPath + "/jsons/jsons.json.txt", playerjson);
    }

    void ReadJson() {
        string jsonReader = File.ReadAllText(Application.dataPath + "/jsons/jsons.json.txt");
        Players players = JsonUtility.FromJson<Players>(jsonReader);
        foreach (var i in players.players) {
            Debug.Log(i.playerName + i.playerSpeed + i.playUid + i.playerMoney);
        }

        Debug.Log("end");
    }
}

[Serializable]
public class Player {
    public int playUid;
    public string playerName;
    public float playerSpeed;
    public int playerMoney;
}

[Serializable]
public class Players {
    public List<Player> players;
}

